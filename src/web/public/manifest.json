  "screenshots": [
    {
      "src": "screenshots/dashboard.png",
      "sizes": "1280x720",
      "type": "image/png",
      "label": "Dashboard Overview",
      "platform": "wide",
      "form_factor": "wide"
    },
    {
      "src": "screenshots/document-vault.png",
      "sizes": "1280x720",
      "type": "image/png",
      "label": "Secure Document Vault",
      "platform": "wide",
      "form_factor": "wide"
    }
  ],
  "shortcuts": [
    {
      "name": "Document Vault",
      "short_name": "Vault",
      "description": "Access your secure document storage",
      "url": "/vault",
      "icons": [
        {
          "src": "icons/vault-96x96.png",
          "sizes": "96x96"
        }
      ]
    },
    {
      "name": "Delegate Management",
      "short_name": "Delegates",
      "description": "Manage access for executors and trusted contacts",
      "url": "/delegates",
      "icons": [
        {
          "src": "icons/delegates-96x96.png",
          "sizes": "96x96"
        }
      ]
    }
  ],
  "prefer_related_applications": false,
  "related_applications": [],
  "display_override": [
    "standalone",
    "browser"
  ],
  "handle_links": "preferred",
  "launch_handler": {
    "client_mode": ["navigate-existing", "auto"]
  },
  "edge_side_panel": {
    "preferred_width": 400
  },
  "protocol_handlers": [
    {
      "protocol": "web+estatekit",
      "url": "/handle/%s"
    }
  ],
  "share_target": {
    "action": "/share-target",
    "method": "POST",
    "enctype": "multipart/form-data",
    "params": {
      "files": [
        {
          "name": "documents",
          "accept": ["application/pdf", ".pdf", "image/*"]
        }
      ]
    }
  }
}